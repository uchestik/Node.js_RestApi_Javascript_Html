                        <input type='text' class='blogInput' value='<%= blog.image %>' name='blog[image]'id='blogImage' placeholder=' Enter Blog image url'>
                        </div>
                    </div>
                    <div class='BlogInputSpacing'>
                        <label for='blogCaption'>Blog image caption:</label>
                        <div>
                        <input type='text' class='blogInput' value='<%= blog.imageCaption %>' name='blog[imageCaption]' id='blogCaption' placeholder=' Enter Blog Image Caption'>
                        </div>
                    </div>
                     <div class='BlogInputSpacing'>
                        <label>Enter Today's Date (Month/DD/YYYY):</label>
                        <div>
                            <select name="blog[dateMonth]" class='selectInput' value='<%= blog.dateMonth %>' required>
                              <option value="Jan">January</option>
                              <option value="Feb">February</option>
                              <option value="Mar">March</option>
                              <option value="Apr">April</option>
                              <option value="May">May</option>
                              <option value="Jun">June</option>
                              <option value="Jul">July</option>
                              <option value="Aug">August</option>
                              <option value="Sep">September</option>
                              <option value="Oct">October</option>
                              <option value="Nov">November</option>
                              <option value="Dec">December</option>
                            </select>
                            <input type='number' class='numberInputDay' value='<%= blog.dateDay %>' name='blog[dateDay]' min='1' max='31' placeholder='DD' required>
                            <input type='number' class='numberInputYear' value='<%= blog.dateYear %>' name='blog[dateYear]' min='2017' placeholder='YYYY' required>
                        </div>
                    </div>
                    <div class='BlogInputSpacing'>
                        <label class='labelBlogTextArea'>Edit Paragraph 1 <span class='addParagraphIcon'><i class="fa fa-plus-circle" aria-hidden="true"></i></span>:</label>
